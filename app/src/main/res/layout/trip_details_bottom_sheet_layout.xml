<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/_40dp"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20dp"
        android:text="Select Trip Type"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/rg_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"

        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_trip">


        <RadioButton
            android:id="@+id/rb_pickup"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/btn_orange"
            android:checked="true"
            android:text="Pickup" />

        <RadioButton
            android:id="@+id/rb_drop"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40dp"
            android:buttonTint="@color/btn_orange"
            android:text="Drop" />


    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_vehicle_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20dp"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/rg_trip">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/vehicleNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:hint=" Enter Vehicle Plate Number"
            android:paddingBottom="@dimen/_10dp"
            android:background="@color/white"
            android:textColorHint="@color/grey"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            tools:text="kahsdfkjadfhl" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_start_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_40dp"
        android:backgroundTint="@color/btn_orange"
        android:text="Start Trip"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_vehicle_no" />


</androidx.constraintlayout.widget.ConstraintLayout>