<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="tripData"
            type="com.vehiclecare.vc_driver_arvind.model.getAckoVehicleRide.TripDatum" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/dark_blue"
        android:outlineSpotShadowColor="@color/dark_blue"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <View
                android:layout_width="@dimen/_1dp"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/gd"
                android:background="@color/dark_blue"
                app:layout_constraintEnd_toEndOf="@+id/gd"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="@dimen/_0dp"/>


            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"

                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/gd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="khasdflk" />


            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_5dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gd"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="khasdflk" />

            <TextView
                android:id="@+id/tv_lic_plate_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@{tripData.licensePlateNumber}"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/gd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_start_date"
                tools:text="khasdflk" />

            <TextView
                android:id="@+id/tv_trip_category"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:inputType="textCapWords"
                android:text="@{tripData.tripCategory}"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gd"
                app:layout_constraintTop_toBottomOf="@+id/tv_end_date"
                tools:text="khasdflk" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>